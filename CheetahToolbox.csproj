<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>true</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<Platforms>Windows;Linux</Platforms>
		<Configurations>Debug;Release</Configurations>
		<Version>1.0.0</Version>
        <OutDir>$(SolutionDir)Builds\</OutDir>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Platform)' == 'Windows' ">
		<DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Platform)' == 'Linux' ">
		<DefineConstants>$(DefineConstants);LINUX</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<None Include=".github\workflows\*.yml" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="CliWrap" Version="3.6.5-test" />
	</ItemGroup>

</Project>
